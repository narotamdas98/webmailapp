generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mailsSent     Mail[]   @relation("MailSent")
  mailsReceived Mail[]   @relation("MailReceived")
}


model Mail {
  id          String   @id @default(uuid())
  subject     String
  body        String
  fromUserId  Int
  toUserId    Int
  createdAt   DateTime @default(now())
  read        Boolean  @default(false)

  fromUser User @relation("MailSent", fields: [fromUserId], references: [id])
  toUser   User @relation("MailReceived", fields: [toUserId], references: [id])
}

